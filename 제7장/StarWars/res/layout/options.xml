<?xml version="1.0" encoding="utf-8"?>
<LinearLayout             
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/space0">
    
	<ImageView 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_gravity="center" 
		android:src="@drawable/img_star" 
		android:layout_marginTop="35dip"/>

	<LinearLayout             
    android:layout_gravity="center" 
    android:layout_height="wrap_content" 
    android:background="@drawable/img_bgopt" 
    android:layout_width="260dip" 
    android:orientation="vertical" 
    android:layout_marginTop="15dip">
	
	<LinearLayout 
		android:layout_marginRight="20dip" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal" 
		android:layout_gravity="center" 
		android:layout_marginLeft="25dip" 
		android:layout_marginTop="60dip">
		
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:src="@drawable/img_diff" 
			android:layout_gravity="center" 
			android:layout_marginRight="15dip"/>
		
		<RadioGroup 
			android:id="@+id/RadioGroup01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:orientation="vertical">

			<RadioButton 
				android:id="@+id/RButton01" 
				android:tag="0" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
			<RadioButton 
				android:id="@+id/RButton02" 
				android:tag="1" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
			<RadioButton 
				android:id="@+id/RButton03" 
				android:tag="2" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
		</RadioGroup>
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center" 
			android:src="@drawable/img_easy" 
			android:layout_marginLeft="5dip"/>
	</LinearLayout>

	<LinearLayout 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal" 
		android:layout_marginTop="20dip" 
		android:layout_marginLeft="25dip">
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center" 
			android:layout_marginRight="10dip" 
			android:src="@drawable/img_music"/>
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:orientation="vertical" 
			android:layout_gravity="center" 
			android:layout_marginLeft="20dip">
			<ImageView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="center" 
				android:layout_marginRight="10dip" 
				android:src="@drawable/btn_on" 
				android:id="@+id/btn01"/>
			<ImageView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="center" 
				android:layout_marginRight="10dip" 
				android:src="@drawable/btn_on" 
				android:layout_marginTop="10dip" 
				android:layout_marginBottom="10dip" 
				android:id="@+id/btn02"/>
			<ImageView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="center" 
				android:layout_marginRight="10dip" 
				android:src="@drawable/btn_on" 
				android:id="@+id/btn03"/>
			</LinearLayout>
		</LinearLayout>
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:src="@drawable/btn_back" 
			android:layout_gravity="center" 
			android:layout_marginTop="20dip" 
			android:layout_marginBottom="30dip" 
			android:id="@+id/btnBack"/>
	</LinearLayout>
</LinearLayout>
